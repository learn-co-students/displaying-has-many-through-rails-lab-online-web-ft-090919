<%= @doctor.name %> | <%= @doctor.department %>
Appointments:
<%= @doctor.appointments.each do |appointment| %>
  <%= @patient = @doctor.patients.find(appointment.patient_id) %>
  <%= link_to @patient.name, patient_path(@patient) %> - <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appointment) %>
<%end%>