<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>
<table>
    <% @doctor.appointments.each do |appt| %>
        <tr>
            <td><%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %></td>
            <td><%= link_to appt.patient.name, patient_path(appt.patient) %></td>
        </tr>
    <% end %>
</table>