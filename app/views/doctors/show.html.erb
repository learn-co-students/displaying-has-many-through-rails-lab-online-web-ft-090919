
<h1><%= @doctor.name %></h1><br>
<br>

  <strong>Department:</strong>
  <%= @doctor.department %>
<br>

  <strong>Appointments:</strong>
  <ul>
    <% @doctor.appointments.each do |a| %>
      <li><%= link_to a.patient.name, patient_path(a.patient) %><br>
      <%= a.readable_datetime %><br>
      <br>
    <% end %>
  </ul>
