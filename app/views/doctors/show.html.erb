<h1>Doctor Show</h1>

<h2><%= @doctor.name %></h2>
<h2><%= @doctor.department %></h2>

<h2>Appointments</h2>
<%= @doctor.appointments.each do |appointment| %>
<div>
  <h3><%= link_to appointment.patient.name, patient_path(appointment.patient) %></h3>
  <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %>
</div>
<% end %>
