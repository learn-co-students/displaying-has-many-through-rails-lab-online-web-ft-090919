<h1><%= @patient.name %></h1>
<table>
    <% @patient.appointments.each do |appt| %>
        <tr>
            <td><%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %></td>
            <td><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></td>
        </tr>
    <% end %>
</table>