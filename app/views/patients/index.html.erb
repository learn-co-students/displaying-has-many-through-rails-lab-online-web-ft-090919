<style media="screen">
  ul li { padding: 5px;}
</style>

<h1>Patients</h1>

<ul>
  <% @patients.each do |patient| %>
    <li>
      Name: <a href="/patients/<%= patient.id %>"><%= patient.name %></a><br>
      Number of Appointments: <%= patient.appointments.count %>
    </li>
  <% end %>
</ul>

<table border>
  <tr>
    <th>Patient Name</th>
    <th># of Appointments</th>
  </tr>

  <% @patients.each do |patient| %>
    <tr>
      <td><a href="/patients/<%= patient.id %>"><%= patient.name %></a></td>
      <td style="text-align: center;"><%= patient.appointments.count %></td>
    </tr>
  <% end %>
</table>
